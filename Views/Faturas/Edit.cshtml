@model LojaVirtual.Models.Fatura

@{
    ViewData["Title"] = $"Editar {Model.FaturaId}";
}

<h1>Editar</h1>

<h4>Fatura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FaturaId" />
            <div class="form-group">
                <label asp-for="PedidoId" class="control-label"></label>
                <select asp-for="PedidoId" class="form-control" asp-items="ViewBag.PedidoId"></select>
                <span asp-validation-for="PedidoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FaturaStatus" class="control-label"></label>
                <input asp-for="FaturaStatus" class="form-control" />
                <span asp-validation-for="FaturaStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExternalReference" class="control-label"></label>
                <input asp-for="ExternalReference" class="form-control" />
                <span asp-validation-for="ExternalReference" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IPAddress" class="control-label"></label>
                <input asp-for="IPAddress" class="form-control" />
                <span asp-validation-for="IPAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PreferenceMPId" class="control-label"></label>
                <input asp-for="PreferenceMPId" class="form-control" />
                <span asp-validation-for="PreferenceMPId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetodoDePagamento" class="control-label"></label>
                <input asp-for="MetodoDePagamento" class="form-control" />
                <span asp-validation-for="MetodoDePagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label"></label>
                <input asp-for="CreatedDate" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastUpdatedDate" class="control-label"></label>
                <input asp-for="LastUpdatedDate" class="form-control" />
                <span asp-validation-for="LastUpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

